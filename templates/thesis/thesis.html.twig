{% extends 'base.html.twig' %}

{% block title %}Hello ThesisController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {% for ecole in ecoles %}
        {% for these in ecole.theses %}
        <div class="back">
            <div class="aa">
                <h2>{{ these.title|capitalize }}</h2>
                <h3>{{ these.PhraseAccroche|capitalize }}</h3>
                    <h3 class="description">{{these.description|capitalize}}</h3>
                <h4>{{ these.mail|capitalize }}</h4>
                <a href="{{ ecole.lien|capitalize }}">{{ecole.nom|capitalize}}</a>
            </div>
        </div>
        {% endfor %}
    {% endfor %}
{% endblock %}


